<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/background_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_stars"
        android:contentDescription="Background GIF" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button"
        android:backgroundTint="@null"

        android:text="Continue"
        android:textSize="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background_gif"
        app:layout_constraintStart_toStartOf="@+id/background_gif"
        app:layout_constraintTop_toTopOf="@+id/background_gif" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="92dp">


        <TextView
            android:id="@+id/storyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="Humanity's journey has always\n\nbeen driven by a desire to\n\nexplore the unknown. From\n\ncrossing oceans to landing\n\non the moon, we've never\n\nstopped reaching for new frontiers.\n\nNow, the next great adventure\n\nawaits. Mankind will migrate into\n\nspace, and will cross the airless\n\nSaharas which separate\n\nplanet from planet,\n\nsun from sun.
"
            android:textColor="#FFD700"
            android:textSize="24sp"
            android:textStyle="bold" />


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>